

@model IEnumerable<Enclosure> 


    <div class="container-lg">

        <h2 class="text-center">Enclosures</h2>

        <a class="btn btn-primary" asp-controller="Enclosure" asp-action="create">Create </a>


        <table  class="table table-striped">

            <thead>
                <tr>
               <th>
               @Html.DisplayNameFor(model => model.Name)

               </th>
                    <th>
                        @Html.DisplayNameFor(model=>model.Capacity)
                    </th>
                <th>
                    @Html.DisplayNameFor(model=>model.PricePerSeat)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.StadiumId)
                </th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Capacity
                    </td>
                    <td>
                        @item.PricePerSeat
                    </td>
                    <td>
                        @item.Stadiums.Std_Name
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-controller="Enclosure" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Enclosure" asp-route-id="@item.Id">Delete</a>

                    </td>
                </tr>


            }
           
            </tbody>
          
        </table>


    </div>



